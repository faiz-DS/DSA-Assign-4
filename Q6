def sorted_squares(nums):
    # Square each element in the array
    squared_nums = [num * num for num in nums]

    # Sort the squared numbers in non-decreasing order
    squared_nums.sort()

    return squared_nums

# Example 1
nums = [-4, -1, 0, 3, 10]
output = sorted_squares(nums)
print(output)  # Output: [0, 1, 9, 16, 100]
